<script src="./js/chart.js"></script>
<script>
  const dataUserStr = <%- JSON.stringify(dataUser) %>;
  const userName = dataUserStr.map(user => user.name);
  const userCount = dataUserStr.map(user => user.count);

  const usersDataSet = {
    labels: userName,
    datasets: [{
      label: 'Mensajes enviados',
      data: userCount,
      backgroundColor: [
        'rgba(54, 162, 235, 0.2)',
        'rgba(255, 206, 86, 0.2)',
        'rgba(75, 192, 192, 0.2)',
        'rgba(153, 102, 255, 0.2)',
        'rgba(255, 99, 132, 0.2)',
      ],
      borderColor: [
        'rgba(54, 162, 235, 1)',
        'rgba(255, 206, 86, 1)',
        'rgba(75, 192, 192, 1)',
        'rgba(153, 102, 255, 1)',
        'rgba(255, 99, 132, 1)',
      ],
      borderWidth: 1
    }]
  };

  const ctxUser = document.getElementById('telegram-users-chart').getContext('2d');
  const chartUser = new Chart(ctxUser, {
    type: 'bar',
    data: usersDataSet,
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      },
      plugins: {
        legend: {
          display: false
        }
      }
    }
  });
</script>